<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Description>An xUnit TestFramework that uses Autofac to resolve tests and their dependencies</Description>
    <AssemblyTitle>xunit.frameworks.autofac</AssemblyTitle>
    <VersionPrefix>0.2.0</VersionPrefix>
    <Authors>MinistryOfMagic</Authors>
    <TargetFrameworks>netstandard2.1;net461</TargetFrameworks>
    <AssemblyName>xunit.frameworks.autofac</AssemblyName>
    <PackageId>xunit.frameworks.autofac</PackageId>
    <PackageTags>xunit;autofac</PackageTags>
    <PackageLicenseUrl>http://www.opensource.org/licenses/MIT</PackageLicenseUrl>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/MinistryOfMagic/xunit.frameworks.autofac</RepositoryUrl>
    <PackageTargetFallback Condition=" '$(TargetFramework)' == 'netstandard2.1' ">$(PackageTargetFallback);dnxcore50</PackageTargetFallback>
    <NetStandardImplicitPackageVersion Condition=" '$(TargetFramework)' == 'netstandard2.1' ">2.1</NetStandardImplicitPackageVersion>
    <RootNamespace>Xunit.Frameworks.Autofac</RootNamespace>
    <Version>0.3.0</Version>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Autofac" Version="5.2.0" />
    <PackageReference Include="xunit.extensibility.execution" Version="2.4.1" />
  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'net461' ">
    <Reference Include="System.Runtime" />
    <Reference Include="System.Threading.Tasks" />
    <Reference Include="System" />
    <Reference Include="Microsoft.CSharp" />
  </ItemGroup>

</Project>
